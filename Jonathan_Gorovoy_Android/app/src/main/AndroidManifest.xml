<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jonathan_gorovoy_android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jonathan_Gorovoy_Android"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity android:name=".ModifyEventActivity" android:label="Modify Event" />
        <activity android:name=".ModifyDayActivity" android:label="Modify Day" />
        <activity android:name=".MonthCalendarActivity" android:label="Monthly Calendar" />
        <activity android:name=".ViewRoutinesActivity" android:label="Routines" />
        <activity android:name=".ViewDeadlinesActivity" android:label="Deadlines" />
        <activity android:name=".MainActivity" android:label="Daily Routine Manager" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".classes.ReminderCreator" />
    </application>

</manifest>