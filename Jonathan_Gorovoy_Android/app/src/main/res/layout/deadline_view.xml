<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/deadlineText"
        android:layout_width="264dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Deadline Text"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deadlineDate"
        android:layout_width="102dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:text="10/4/2021"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/deadlineText"
        app:layout_constraintStart_toEndOf="@+id/deadlineText"
        app:layout_constraintTop_toTopOf="@+id/deadlineText"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>